<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_send_message_layout"
        android:layout_marginBottom="5dp">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/detail_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <!--TITLE-->
                <TextView
                    android:id="@+id/infringementTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Title"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <!--ID-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/MSGtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MSG ID: " />

                    <TextView
                        android:id="@+id/MSGvalue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />

                </LinearLayout>

                <!--POI-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/POItitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:text="POI:" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/POInameValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="" />

                        <TextView
                            android:id="@+id/POIaddressValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="" />

                    </LinearLayout>

                </LinearLayout>

                <!--VEHICLE-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/vehicleTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:text="Vehicle:" />

                    <TextView
                        android:id="@+id/vehicleValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="" />

                </LinearLayout>

                <!--DATE-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/dateTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:text="Date:" />

                    <TextView
                        android:id="@+id/dateVal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="" />

                </LinearLayout>

                <!--TIME-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/timeTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:text="Time:" />

                    <TextView
                        android:id="@+id/timeVal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="" />

                </LinearLayout>

                <!--LOCATION-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/locationTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:text="Location:" />

                    <TextView
                        android:id="@+id/locationVal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="" />

                </LinearLayout>

                <!--OFFENCE-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/offenceTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:text="Offence:" />

                    <TextView
                        android:id="@+id/offenceVal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="" />

                </LinearLayout>

                <TextView
                    android:id="@+id/reasonTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Please enter the reason for deletion."
                    android:textColor="@color/colorAccent"
                    android:textSize="19dp" />

                <TextView
                    android:id="@+id/reasonTitleMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:text="the request to be sent to the supervisor for approval."
                    android:textColor="@color/colorAccent"
                    android:textSize="14dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/container_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.mklimek.circleinitialsview.CircleInitialsView
                        android:id="@+id/avatar_agent"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        custom:circleInitialsView_backgroundColor="@color/colorAccent"
                        custom:circleInitialsView_textColor="#FFFFFF" />

                    <ImageView
                        android:id="@+id/triangle"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_toLeftOf="@id/avatar_agent"
                        android:layout_toStartOf="@+id/avatar_agent"
                        custom:srcCompat="@drawable/triangle_point_right"
                        android:background="@color/colorPrimary"/>

                    <TextView
                        android:id="@+id/user_message"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/triangle"
                        android:background="@color/colorAccent"
                        android:padding="5dp"
                        android:text=""
                        android:textColor="@android:color/white" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/container_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">


                    <com.mklimek.circleinitialsview.CircleInitialsView
                        android:id="@+id/avatar_admin"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentLeft="true"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        custom:circleInitialsView_backgroundColor="@android:color/darker_gray"
                        custom:circleInitialsView_textColor="#FFFFFF" />



                    <ImageView
                        android:id="@+id/triangle_admin"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_toRightOf="@id/avatar_admin"
                        android:layout_toEndOf="@+id/avatar_admin"
                        custom:srcCompat="@drawable/triangle_point_left"/>

                    <TextView
                        android:id="@+id/admin_message"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/avatar_admin"
                        android:background="@android:color/darker_gray"
                        android:padding="5dp"
                        android:text=""
                        android:textColor="@android:color/white" />

                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_send_message_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/reason_text"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_weight=".8"
                android:background="@android:color/transparent"
                android:gravity="center_vertical|left"
                android:hint="Write a message"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/send_delete_request_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight=".2"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:onClick="submitButton"
                android:text="Send"
                android:textAllCaps="false"
                android:textColor="@color/colorAccent"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
